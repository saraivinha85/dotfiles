set $ws2 ii
set $ws3 iii
set $ws4 iv
set $ws5 v
set $ws6 vi

set $mod Mod4

gaps inner 26
gaps outer 0

for_window [class="^.*"] border pixel 0 
for_window [class=".*"] title_format " >_ %title "

#                         border  bg      text    indicat child_border
client.focused            #232323 #232f3b #d0f3eb #4F4F4F #212a33
